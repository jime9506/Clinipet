@model List<MVCCrud.Models.View_models.Empresaviewmodels>
@{
    ViewBag.Title = "Mis datos";
}

<h2>ViewBag.Title</h2>


<div class="row" style="text-align:right;padding:5px;">
    <a href="~/empresa/Crear" class="btn btn-primary">Crear </a>
</div>
<div class="row">
    <div class=" col-md-12">
        <table class="table">
            <tr>
                <th>Id</th>
                <th>perNombre</th>
                <th>perCorreo</th>
                <th>perNit</th>
                <th></th>

            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.perNombre</td>
                    <td>@oElemento.perCorreo</td>
                    <td>@oElemento.perNit</td>
                    <td>
                        <a class="btn btn-default" href="~/Empresa/Editar/@oElemento.Id">Editar</a>
                        <a class="btn btn-danger" href="~/Empresa/Eliminar/@oElemento.Id">Eliminar</a>
                    </td>

                </tr>
            }
        </table>

    </div>


</div>

