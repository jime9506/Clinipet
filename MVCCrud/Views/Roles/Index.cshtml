@model List<MVCCrud.Models.View_models.Rolesviewmodels>
@{
    ViewBag.Title = "Mis datos";
}

<h2>ViewBag.Title</h2>


<div class="row" style="text-align:right;padding:5px;">
    <a href="~/Usuarios/Crear" class="btn btn-primary">Crear </a>
</div>
<div class="row">
    <div class=" col-md-12">
        <table class="table">
            <tr>
                <th>IdRol</th>
                <th>Rol</th>
                <th></th>

            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.IdRol</td>
                    <td>@oElemento.Rol</td>
                    <td>
                        <a class="btn btn-default" href="~/Usuarios/Editar/@oElemento.Id">Editar</a>
                        <a class="btn btn-danger" href="~/Usuarios/Eliminar/@oElemento.Id">Eliminar</a>
                    </td>

                </tr>
            }
        </table>

    </div>


</div>

