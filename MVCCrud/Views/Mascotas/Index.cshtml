@model List<MVCCrud.Models.View_models.Mascotasviewmodels>

@{
    ViewBag.Title = "Mis datos";
}

<h2>ViewBag.Title</h2>


<div class="row" style="text-align:right;padding:5px;">
    <a href="~/Mascotas/Crear" class="btn btn-primary">Crear </a>
</div>
<div class="row">
    <div class=" col-md-12">
        <table class="table">
            <tr>
                <th>IdMascota</th>
                <th>Categoria</th>
                <th>Telefono</th>
                <th>Raza</th>
                <th>Edad</th>
                <th>Sexo</th>
                <th>Acudiente</th>
                <th></th>

            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.IdMascota</td>
                    <td>@oElemento.Categoria</td>
                    <td>@oElemento.NombreMascota</td>
                    <td>@oElemento.Telefono</td>
                    <td>@oElemento.Raza</td>
                    <td>@oElemento.Edad</td>
                    <td>
                        <a class="btn btn-default" href="~/Mascotas/Editar/@oElemento.IdMascota">Editar</a>
                        <a class="btn btn-danger" href="~/Mascotas/Eliminar/@oElemento.IdMascota">Eliminar</a>
                    </td>

                </tr>
            }
        </table>

    </div>


</div>

