@model MVCCrud.Models.View_models.HistoriaClinicaviewmodels
@{
    ViewBag.Title = "Nuevo";
}

<h2>ViewBag.Title</h2>


@using (Html.BeginForm("Editar", "Usuarios", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            @Html.HiddenFor(d => d.Id)
            <div>
                @Html.LabelFor(d => d.Emfermedades)
                @Html.TextBoxFor(d => d.Emfermedades, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Emfermedades, null, new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.Vacunas)
                @Html.TextBoxFor(d => d.Vacunas, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Vacunas, null, new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.Peso)
                @Html.TextBoxFor(d => d.Peso, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Peso, null, new { @class = "red" })

            </div>
            
            <br />

            <div style="text-align:right;">
                <a class="btn btn-primary" type="button" href="~/Usuarios"> Cancelar </a>

                <input value="Guardar" class="btn btn-primary" type="submit" />
            </div>
        </div>

    </div>
}

